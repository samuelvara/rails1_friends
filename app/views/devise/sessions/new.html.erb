<div class="card">
  <div class="card-header">
    <h2>Log in</h2>
  </div>
  
  <div class="card-body">
    <p class="card-text">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="ca">
      <!-- <%= f.label :email, class:"form-label" %><br /> -->
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", placeholder:'Email' %>
    </div><br>

    <div class="field">
      <!-- <%= f.label :password, class:"form-label" %><br /> -->
      <%= f.password_field :password, autocomplete: "current-password", class:"form-control", placeholder:'Password' %>
    </div><br>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me, class:"form-check-input", 'id':"exampleCheck1" %>
        <%= f.label :remember_me, class:"form-check-label", 'for':"exampleCheck1" %>
      </div>
    <% end %><br>

    <div class="actions">
      <%= f.submit "Log in", class:"btn btn-primary" %>
    </div>
<% end %>
<br>
    </p>
  </div>
</div>





<%= render "devise/shared/links" %>
